<Window x:Class="DesktopClockOverlay.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Clock Settings" Height="350" Width="300">
    <StackPanel Margin="10" VerticalAlignment="Center">
        <TextBlock Text="Font Family:" Margin="0,5"/>
        <ComboBox x:Name="FontComboBox" Height="25"/>

        <TextBlock Text="Font Size:" Margin="0,10,0,5"/>
        <TextBox x:Name="FontSizeTextBox" Height="25" Width="70" Text="48" HorizontalAlignment="Left"/>

        <TextBlock Text="Color:" Margin="0,10,0,5"/>
        <Button Content="Pick Color" Click="PickColor_Click"/>

        <TextBlock Text="Custom Text:" Margin="0,10,0,5"/>
        <TextBox x:Name="CustomTextBox"/>

        <TextBlock Text="Position X:" Margin="0,10,0,5"/>
        <Slider x:Name="PosXSlider" Minimum="0" Maximum="1920"/>

        <TextBlock Text="Position Y:" Margin="0,10,0,5"/>
        <Slider x:Name="PosYSlider" Minimum="0" Maximum="1080"/>

        <Button Content="Apply" Margin="0,15,0,0" Click="Apply_Click"/>
    </StackPanel>
</Window>